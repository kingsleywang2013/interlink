<div class="row" style="margin-top:35px;" id="job-lookup">
  <div class="col-md-8 col-md-offset-2">
    <div class="input-group">
      <%= form_tag search_job_path, remote: true, method: :get, id: 'job-lookup-form' do %>
        <%= text_field_tag :job_title_search_param, params[:job_search_param],
                                        class: 'form-control', autofocus: true,
                                        placeholder: 'Job Title, e.g. RoR developer, Java Developer' %>
        <%= text_field_tag :job_location_search_param, params[:job_location_search_param],
                                                      class: 'form-control',
                                                        placeholder: 'Job Location, e.g. Sydney, Melbourne' %>
        <span class="input-group-btn">
          <%= button_tag(type: :submit, class: 'btn btn-default') do %>
          <i class="fa fa-search"></i>
          <% end %>
        </span>
      <% end %>
      <%= render 'common/spinner' %>


      <% if @job_results %>
        <% if @job_results.size > 0 %>
          <div class="col-xs-12" id="job_lookup_result">
            <% @job_results.each do |job| %>
              <div class="panel panel-default">
                <div class="panel-body" style="padding-left:0">
                  <div class="col-md-2">
                    <%= job.job_title %><br/>
                    <%= job.employment_type %>
                    <%= job.job_location %></br>
                  </div>
                  <div class="col-md-4" style="text-align:left;">
                    <%= truncate(job.job_requirement, length: 150) %>
                  </div>
                  <div class="col-md-6">
                    <%= link_to 'View job', job_path(job), class: 'btn btn-xs btn-primary' %>
                    <% if current_user.can_save_job?(job) %>
                      <%= link_to 'Save job', add_job_path(user_id:current_user.id, job_id: job.id),
                                                class: 'btn btn-xs btn-success', method: :post %>
                    <% else %>
                      <span class="panel panel-default">job saved</span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="lead col-md-12">
            No job match this criteria
          </p>
        <% end %>
    <% end %>

    <div id="job_lookup_error"></div>
    </div><!-- /input-group -->


  </div>

</div>
