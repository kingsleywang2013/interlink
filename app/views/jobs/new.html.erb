<h1 align="center">Create new job</h1>
<div class="row">
  <div class="rol-md-8 col-md-offset-2">
    <%= form_for @job do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', autofocus: true, placeholder: 'Job Title', required:true %>
      </div>
      <div class="form-group">
        <%= f.label :type %>
        <%= f.select :type, options_for_select(Job.type_options), { include_blank: 'Employment Type'},
                                                                class: 'form-control', required:true %>
      </div>
      <div class="form-group">
        <%= f.label :location %>
        <%= f.text_field :location, class: 'form-control', placeholder: 'Work Location', required:true %>
      </div>
      <div class="form-group">
        <%= f.label :requirement %>
        <%= f.text_area :requirement, cols: '5', rows: '8', class: 'form-control',
                                                placeholder: 'Work Requirement', required:true %>
      </div>
      <%= f.submit 'Post job', class:'btn btn-lg btn-success' %>
    <% end %>
  </div>

</div>
