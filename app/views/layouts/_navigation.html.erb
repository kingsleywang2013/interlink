 <div class="navbar navbar-default navbar-static-top">
      <div class="container">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'InterLink', root_path, class: 'navbar-brand' %>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav">

            <% if current_user %>
              <% if current_user.profile.present? %>
                <li><%= link_to 'Home', home_path %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'My Profile', my_profile_path %></li>
                    <li role="separator" class="divider"></li>
                    <li><%= link_to 'Edit Profile', edit_profile_path(current_user.profile) %></li>
                  </ul>
                </li>
                <li><%= link_to 'My Network', my_friends_path %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Jobs <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'View All Jobs', my_jobs_path %></li>
                    <li role="separator" class="divider"></li>
                    <li><%= link_to 'My Saved Jobs', '#' %></li>
                  </ul>
                </li>
              <% end %>
            <% else %>
              <li>
              <%= form_for(:user, :url => session_path(:user), html: { class: "navbar-form navbar-right form-inline" }) do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
                </div>
                <div class="form-group">
                  <%= link_to 'Forgot password?', new_user_password_path %>
                </div>
                <%= f.submit 'Sign in', class: 'btn btn-default' %>
              <% end %>
              </li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>

              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Business Service <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Post a job', '#' %></li>
                  <li><a href="#">Another action</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="#">Separated link</a></li>
                </ul>
              </li>
              <li>
                <%= link_to('Sign out', destroy_user_session_path, method: :delete ) %>
              </li>
            <% else %>
              <li>
                <%= link_to('Sign up', new_user_registration_path) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
