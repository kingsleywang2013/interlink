<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @profile do |f| %>
      <div class="row" style="margin-top:30px; margin-bottom:30px">
        <div class="col-md-6">
          <%= gravatar_tag current_user, size: '120', html: { id:'gravatar' } %>
          <img id="profile_avatar" src="#" style="display: none;" height="120" width="120" />
          <span id='profile_img' style="cursor:pointer;">Want change your avatar?</span>
          <%=f.file_field :picture, accept: 'image/png,image/gif,image/jpeg, image/jpg',
                                    id: 'my_avatar',
                                    style: 'display:none;',
                                    onchange: 'avatarURL(this)' %>
        </div>
        <div class="col-md-6">
          <% if current_user.profile.present? %>
            <% if current_user.full_name.present? %>
              <p>Hi <%= current_user.full_name %> !</p>
            <% else %>
              <p>Hi <%= current_user.email %> !</p>
            <% end %>
          <% else %>
            <p>Hi <%= current_user.email %> !</p>
          <% end %>
          <p>If you want your potiantial next Boos know more about you, please fill up the following
          form as much as you can. Keep going, we will offer more platforms for you to express
          yourself soon later</p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: "form-control", required:true %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: "form-control", required:true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :job_title %>
            <%= f.text_field :job_title, class: "form-control", placeholder: 'Web Devloper, Engineer, Doctor' %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :phone_no %>
            <%= f.text_field :phone_no, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :summary %>
        <%= f.text_area:summary, cols:'10', rows: '5', class: "form-control", placeholder: 'A summary to let others know more about you. Dont be shy', requried: true %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create profile', class: 'btn btn-lg btn-success' %>
      </div>
    <% end %>
  </div>
</div>
